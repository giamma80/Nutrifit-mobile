# ============================================
# Agent Service Environment Variables
# ============================================

# Environment
ENVIRONMENT=development
PORT=8000
LOG_LEVEL=INFO

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.eu.auth0.com
AUTH0_AUDIENCE=https://api.nutrifit.app
AUTH0_ALGORITHMS=["RS256"]

# Backend Services URLs
# Local dev: http://localhost:8080
# Docker: http://nutrifit-backend:8080
# Production: https://nutrifit-backend-api.onrender.com
GRAPHQL_ENDPOINT=http://nutrifit-backend:8080/graphql
REST_API_ENDPOINT=http://nutrifit-backend:8080/api/v1

# Redis Configuration
# Local dev: redis://localhost:6379
# Docker: redis://redis:6379
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# Strands Configuration
STRANDS_MODEL=anthropic.claude-sonnet-4-20250514-v1:0

# AWS Credentials (for Bedrock)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# MCP Configuration (internal container paths)
MCP_BASE_PATH=/app/MCP
MCP_PYTHON_PATH=/app/MCP/.venv/bin/python

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://*.vercel.app

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=500

# Feature Flags
ENABLE_STREAMING=true
ENABLE_REDIS_CACHE=true
ENABLE_CONVERSATION_HISTORY=true
